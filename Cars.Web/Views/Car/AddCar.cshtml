@model AddCarViewModel

<h4>New Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveCar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarDto.Model" class="control-label"></label>
                <input asp-for="CarDto.Model" class="form-control" />
                <span asp-validation-for="CarDto.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Manufacturing Date</label> 
                <input asp-for="CarDto.ManufacturingDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="CarDto.ManufacturingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Manufacturer</label>
                <br />
                <select asp-for="CarDto.Manufacturer.Id"
                        asp-items="@(new SelectList(Model.Manufacturers, "Id", "Name"))">
                    <option>Please select one</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

