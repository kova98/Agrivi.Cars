@model EditManufacturerViewModel

<h4>Edit Manufacturer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateManufacturer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="ManufacturerDto.Name" class="form-control" />
