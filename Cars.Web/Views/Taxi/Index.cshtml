@model Taxi[] 

<h4>Enter 3 taxis: </h4>

<form asp-action="EnterTaxis" method="post">
    <ul class="list-group">
        @for (int i = 0; i < 3; i++)
        {
            <li class="list-group-item">
                <input value="Taxi @(i+1)" asp-for="@Model[i].Name" />
            </li>
        }
    </ul>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

